<h1>SHOW USERS</h1>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>USER</th>
            <th>PASSWORD</th>
            <th>EDIT / DELETE</th>
        </tr>
    </thead>
    <tbody>
        <% abc.forEach((usuario)=>{ %>
        <tr>
            <td><%= usuario.id %></td>
            <td><%= usuario.nombre %></td>
            <td><%= usuario.usuario %></td>
            <td><%= usuario.password %></td>
            <td><a href="/modificarUsuario/<% usuario.id %>">EDIT</a> / <a href="/borradoFisicoUsuario/<% usuario.id %>">Borrado fisico</a> / <a href="/borradoLogicoUsuario/<% usuario.id %>">Borrado logico</a></td>
        </tr>
        <% }); %>
    </tbody>
</table>

